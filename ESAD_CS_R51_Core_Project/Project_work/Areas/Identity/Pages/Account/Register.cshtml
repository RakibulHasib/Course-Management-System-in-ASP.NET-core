@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="row">
    <div class="offset-1 col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center alert-info">Create a new account.</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <input asp-for="Input.CellPhone" class="form-control" aria-required="true" />
                <label asp-for="Input.CellPhone"></label>
                <span asp-validation-for="Input.CellPhone" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <input asp-for="Input.Country" class="form-control" aria-required="true" />
                <label asp-for="Input.Country"></label>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <input asp-for="Input.Email" class="form-control"  aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary mt-2">Register</button>
        </form>
    </div>
    <div class="col-6 offset-1">
        <img src="~/Images/images2.png" width="600" class="img-fluid"/>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model Project_work.Models.ViewModel.StudentVM

@{
    ViewData["Title"] = "Edit";
}


<h4 class="alert-dark text-center">Update student</h4>
<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="StudentId" type="hidden"/>
            <input asp-for="Picture" type="hidden"/>
            <div class="form-group mt-1">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" type="date" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="PictureFile" class="control-label"></label>
                <input asp-for="PictureFile" class="form-control" />
                <span asp-validation-for="PictureFile" class="text-danger"></span>
            </div>
            <img src="@Model.Picture" width="50" />
        </div>
        <div class="col-6">
            <div class="d-flex justify-content-between mb-1">
                <h4>Course Info</h4>
                <button type="button" id="btnPlus" class="btn btn-secondary btn-sm mt-5">+</button>
            </div>
            <div>
                <p>Course Name &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Course Fee</p>
            </div>
            <div id="courseContainer">
                @foreach (var item in Model.CourseList)
                {
                    <script>
                        LoadCourse(@item);
                    </script>
                }
            </div>
        </div>
    </div>

    <div class="form-group mt-2">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

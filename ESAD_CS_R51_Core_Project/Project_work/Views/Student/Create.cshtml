@model Project_work.Models.ViewModel.StudentVM

@{
    ViewData["Title"] = "Create";
}


<h4 class="alert-dark text-center">Create a new student</h4>
<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-6">
            <h4>Student Info</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" type="date" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="PictureFile" class="control-label"></label>
                <input asp-for="PictureFile" class="form-control" />
                <span asp-validation-for="PictureFile" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="d-flex justify-content-between mb-1">
                <h4>Course Info</h4>
                <button type="button" id="btnPlus" class="btn btn-secondary btn-sm mt-5">+</button>
            </div>
            <div>
                <p>Course Name &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Course Fee</p>
            </div>
            <div id="courseContainer">
                <script>
                    LoadCourse();
                </script>
            </div>
        </div>
    </div>

    <div class="form-group mt-2">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>
